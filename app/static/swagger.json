{
  "swagger": "2.0",
  "info": {
    "title": "Flask Todo API",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "schemes": ["https"],
  "paths": {
    "/health": {
      "get": {
        "summary": "Check health status",
        "responses": {
          "200": {
            "description": "Healthy"
          }
        }
      }
    },
    "/todos": {
      "get": {
        "summary": "Get all todos",
        "responses": {
          "200": {
            "description": "List of todos"
          }
        }
      },
      "post": {
        "summary": "Create a new todo",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "title": {"type": "string"},
                "description": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "201": {"description": "Created"}
        }
      }
    }
  }
}
